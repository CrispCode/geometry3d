{
    "source": "./src",
    "destination": "./docs",
    "includes": ["\\.js$"],
    "excludes": [],
    "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "lint": {"enable": true},
        "coverage": {"enable": true},
        "accessor": {"access": ["public", "protected", "package", "private"], "autoPrivate": true},
        "undocumentIdentifier": {"enable": true},
        "unexportedIdentifier": {"enable": false},
        "typeInference": {"enable": true},
        "brand": {
          "title": "Geometry 3D",
          "description": "A 3D geometry library. Useful for computing 3d shapes and collisions, on both client side and server side.",
          "repository": "https://github.com/CrispCode/geometry3d.git",
          "site": "https://www.npmjs.com/package/@crispcode/geometry3d",
          "author": "CrispCode"
        },
        "manual": {
          "index": "./readme.md",
          "globalIndex": true,
          "asset": "./manual/assets",
          "files": [
            "./manual/getting-started.md"
          ]
        },
        "test": {
          "source": "./test/",
          "interfaces": ["describe", "it", "context", "suite", "test"],
          "includes": ["\\.js$"],
          "excludes": []
        }
      }
    }] 
  }
  